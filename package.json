{
  "name": "nuvix",
  "version": "1.0.0",
  "description": "Nuvix is a Backend as a Service (BaaS) platform that provides a set of tools and services to help developers build and deploy applications quickly and efficiently.",
  "author": "Ravikant Saini",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nuvix-Tech/nuvix.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "gen:types": "nuvix-db",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "format:libs": "prettier --write \"libs/**/*.ts\"",
    "format:apps": "prettier --write \"apps/**/*.ts\"",
    "format:check": "prettier --check \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nuvix/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nuvix-tech/db": "^0.1.26-alpha.2",
    "@nuvix/audit": "^1.0.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.31",
    "@swc/helpers": "^0.5.17",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/long": "^5.0.0",
    "@types/node": "^22.15.30",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/pg-format": "^1.0.5",
    "@types/sprintf-js": "^1.1.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "fastify": "^5.3.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@nuvix/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@nuvix/pg-meta(|/.*)$": "<rootDir>/libs/pg-meta/src/$1",
      "^@nuvix/utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
    }
  },
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "trustedDependencies": [
    "@apollo/protobufjs",
    "@nestjs/core",
    "@scarf/scarf",
    "@swc/core",
    "argon2",
    "bcrypt",
    "canvas",
    "libpg-query",
    "msgpackr-extract",
    "protobufjs",
    "sharp"
  ]
}
