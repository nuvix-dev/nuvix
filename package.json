{
  "name": "nuvix",
  "version": "1.0.0",
  "description": "Nuvix is a Backend as a Service (BaaS) platform that provides a set of tools and services to help developers build and deploy applications quickly and efficiently.",
  "author": "Ravikant Saini",
  "private": true,
  "license": "UNLICENSED",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nuvix-Tech/nuvix.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "format:libs": "prettier --write \"libs/**/*.ts\"",
    "format:apps": "prettier --write \"apps/**/*.ts\"",
    "format:check": "prettier --check \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/nuvix/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nuvix/test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/common": "^11.0.20",
    "@nestjs/core": "^11.0.20",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-fastify": "^11.0.20",
    "@nestjs/platform-socket.io": "^11.0.20",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.1.4",
    "@nestjs/websockets": "^11.0.20",
    "@nuvix/cache": "^1.0.2-alpha.2",
    "@nuvix/database": "^1.0.2-alpha.3",
    "@nuvix/pg": "^1.0.1-alpha.1",
    "@nuvix/telemetry": "^1.0.0-alpha.1",
    "argon2": "^0.41.1",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "canvas": "^3.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.5.0",
    "graphql": "^16.10.0",
    "handlebars": "^4.7.8",
    "maxmind": "^4.3.24",
    "mysql2": "^3.14.0",
    "nodemailer": "^6.10.1",
    "otplib": "^12.0.1",
    "pg": "^8.14.1",
    "pg-format": "^1.0.4",
    "pgsql-parser": "^13.16.0",
    "prettier-plugin-sql": "^0.19.0",
    "qs": "^6.14.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.33.5",
    "sprintf-js": "^1.1.3",
    "ua-parser-js": "^2.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.20",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.21",
    "@swc/helpers": "^0.5.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.13",
    "@types/pg-format": "^1.0.5",
    "@types/sprintf-js": "^1.1.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "fastify": "^5.3.2",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@nuvix/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@nuvix/pg-meta(|/.*)$": "<rootDir>/libs/pg-meta/src/$1",
      "^@nuvix/utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
    }
  },
  "trustedDependencies": [
    "@apollo/protobufjs",
    "@nestjs/core",
    "@scarf/scarf",
    "@swc/core",
    "argon2",
    "bcrypt",
    "canvas",
    "libpg-query",
    "msgpackr-extract",
    "sharp"
  ]
}