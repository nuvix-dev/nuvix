{
  "name": "@nuvix/platform",
  "version": "1.0.0",
  "description": "Nuvix Platform to manage multiple tenants",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch 'src/**' --watch '../../libs/**/*.ts'",
    "prebuild": "../../scripts/merge-pkg.js platform",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nuvix/core": "workspace:*",
    "@nuvix/pg-meta": "workspace:*",
    "@nuvix/utils": "workspace:*"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@nuvix/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@nuvix/pg-meta(|/.*)$": "<rootDir>/libs/pg-meta/src/$1",
      "^@nuvix/utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
    }
  }
}
