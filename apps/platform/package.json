{
  "name": "@nuvix/platform",
  "version": "0.1.0",
  "description": "Nuvix Platform to manage multiple tenants",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsup",
    "start": "bun build/main.js",
    "dev": "tsup --watch 'src/**' --watch '../../libs/**/*.ts'",
    "prebuild": "../../scripts/merge-pkg.js platform",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "gen:metadata": "bun src/generate-metadata.ts"
  },
  "devDependencies": {
    "@nuvix/core": "workspace:*",
    "@nuvix/pg-meta": "workspace:*",
    "@nuvix/utils": "workspace:*"
  }
}
