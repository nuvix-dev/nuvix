{
  "name": "@nuvix/platform",
  "version": "1.0.0",
  "description": "Nuvix is a Backend as a Service (BaaS) platform that provides a set of tools and services to help developers build and deploy applications quickly and efficiently.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@fastify/cookie": "^11.0.2",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@google-cloud/container": "^6.1.0",
    "@google-cloud/dns": "^5.2.0",
    "@kubernetes/client-node": "^1.3.0",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-fastify": "^11.1.3",
    "@nestjs/platform-socket.io": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.1.3",
    "@nuvix/cache": "^1.0.3-alpha.1",
    "@nuvix/core": "workspace:*",
    "@nuvix/messaging": "^1.0.0",
    "@nuvix/pg": "^1.0.2",
    "@nuvix/pg-meta": "workspace:*",
    "@nuvix/storage": "^1.0.0",
    "@nuvix/telemetry": "^1.0.1",
    "@nuvix/utils": "workspace:*",
    "argon2": "^0.43.0",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "canvas": "^3.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "graphql": "^16.11.0",
    "handlebars": "^4.7.8",
    "maxmind": "^4.3.27",
    "nodemailer": "^7.0.3",
    "otplib": "^12.0.1",
    "pg": "^8.16.0",
    "pg-format": "^1.0.4",
    "pgsql-parser": "^13.16.0",
    "prettier-plugin-sql": "^0.19.1",
    "qs": "^6.14.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.2",
    "sprintf-js": "^1.1.3",
    "ua-parser-js": "^2.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.31",
    "@swc/helpers": "^0.5.17",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/pg-format": "^1.0.5",
    "@types/sprintf-js": "^1.1.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "fastify": "^5.3.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@nuvix/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@nuvix/pg-meta(|/.*)$": "<rootDir>/libs/pg-meta/src/$1",
      "^@nuvix/utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
    }
  },
  "trustedDependencies": [
    "@apollo/protobufjs",
    "@nestjs/core",
    "@scarf/scarf",
    "@swc/core",
    "argon2",
    "bcrypt",
    "canvas",
    "msgpackr-extract",
    "protobufjs",
    "sharp"
  ]
}
