{
  "name": "@nuvix/server",
  "version": "0.1.0",
  "description": "Nuvix is a Open Source Backend that provides a set of tools and services to help developers build and deploy applications quickly and efficiently.",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch 'src/**' --watch '../../libs/**/*.ts'",
    "prebuild": "../../scripts/merge-pkg.js server",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run -c ./vitest.config.e2e.ts",
    "gen:metadata": "bun src/generate-metadata.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/graphql": "^13.1.0",
    "@nuvix/core": "workspace:*",
    "@nuvix/utils": "workspace:*",
    "@scalar/nestjs-api-reference": "^0.5.8",
    "canvas": "^3.1.0",
    "graphql": "^16.11.0",
    "sharp": "^0.34.2"
  },
  "trustedDependencies": [
    "@apollo/protobufjs",
    "canvas",
    "protobufjs",
    "sharp"
  ]
}
