{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nuvix/core": ["libs/core/src"],
      "@nuvix/core/*": ["libs/core/src/*"],
      "@nuvix/pg-meta": ["libs/pg-meta/src"],
      "@nuvix/pg-meta/*": ["libs/pg-meta/src/*"],
      "@nuvix/utils": ["libs/utils/src"],
      "@nuvix/utils/*": ["libs/utils/src/*"]
    }
  }
}
